---
import Layout from '../layouts/DefaultLayout.astro';
import ScrollIndicator from '../components/reactbits/ScrollIndicator.jsx';
import Navbar from '../components/Navbar.jsx';
import Hero from '../components/sections/Hero.jsx';
import Intro from '../components/sections/Intro.jsx';
import Features from '../components/sections/Features.jsx';
import HowItWorks from '../components/sections/HowItWorks.jsx';
import UseCases from '../components/sections/UseCases.jsx';
import Benefits from '../components/sections/Benefits.jsx';
import BlogSection from '../components/sections/BlogSection.jsx';
import About from '../components/sections/About.jsx';
import FinalCTA from '../components/sections/FinalCTA.jsx';
import { emailjsConfig } from '../emailjsConfig';
import "../styles/global.css";
---

<Layout>
  <Navbar client:load />
  <ScrollIndicator client:visible />

  <main class="overflow-y-scroll min-h-screen scroll-smooth bg-black">
    <section class="snap-start min-h-screen"><Intro client:only="react" /></section>
    <section class="snap-start min-h-screen"><Hero client:visible /></section>
    <section class="snap-start min-h-screen"><Features client:visible /></section>
    <section class="snap-start min-h-screen"><UseCases client:visible /></section>
    <section class="snap-start min-h-screen"><Benefits client:visible /></section>
    <section class="snap-start min-h-screen"><BlogSection client:visible /></section>
    <section class="snap-start min-h-screen"><HowItWorks client:visible /></section>
    <section class="snap-start min-h-screen"><About client:visible /></section>
    <FinalCTA emailjsConfig={emailjsConfig} client:visible />
  </main>
</Layout>
